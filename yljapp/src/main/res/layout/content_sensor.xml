<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sensor" tools:context="com.ylj.connect.SensorActivity">

    <LinearLayout
        android:background="@drawable/layout_white"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:padding="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonSummary"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/sensor_quake"/>
            <EditText
                android:id="@+id/et_quake"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonSummary"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/sensor_temp"/>
            <EditText
                android:id="@+id/et_temp"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonSummary"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/sensor_pulse"/>
            <EditText
                android:id="@+id/et_pulse"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonSummary"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/sensor_heading"/>
            <EditText
                android:id="@+id/et_heading"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonSummary"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/sensor_pitch"/>
            <EditText
                android:id="@+id/et_pitch"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonSummary"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/sensor_roll"/>
            <EditText
                android:id="@+id/et_roll"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_start"
                style="@style/BlueSmallButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/sensor_start"/>
            <Button
                android:id="@+id/btn_stop"
                android:layout_marginLeft="10dp"
                style="@style/BlueSmallButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/sensor_stop"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
