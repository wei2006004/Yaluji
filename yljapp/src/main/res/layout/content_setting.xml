<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_setting" tools:context="com.ylj.setting.SettingActivity">

    <ScrollView
        android:background="@drawable/layout_white"
        android:padding="30dp"
        android:layout_centerInParent="true"
        android:layout_width="450dp"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_debug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentLeft="true"
                style="@style/CommonSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_debug"/>
            <Switch
                android:id="@+id/switch_debug"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_ftp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CommonTitle"
                android:text="@string/setting_ftp"/>
            <LinearLayout
                android:paddingLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/layout_ftp_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    style="@style/CommonSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_ftp_ip"/>
                <TextView
                    android:id="@+id/tv_ftp_ip"
                    style="@style/CommonSummary"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23.312.23.3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_ftp_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/CommonSummary"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_ftp_port"/>
                <TextView
                    style="@style/CommonSummary"
                    android:id="@+id/tv_ftp_port"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_ftp_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CommonSummary"
                    android:text="@string/setting_ftp_user"/>
                <TextView
                    android:id="@+id/tv_ftp_user"
                    style="@style/CommonSummary"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_ftp_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    style="@style/CommonSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_ftp_passwd"/>
                <TextView
                    android:id="@+id/tv_ftp_passwd"
                    style="@style/CommonSummary"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"/>
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/CommonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_wifi"/>
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/layout_wifi_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    style="@style/CommonSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_wifi_ip"/>
                <TextView
                    android:id="@+id/tv_wifi_ip"
                    style="@style/CommonSummary"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23.312.23.3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_wifi_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    style="@style/CommonSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_wifi_port"/>
                <TextView
                    android:id="@+id/tv_wifi_port"
                    style="@style/CommonSummary"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21"/>
            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
