<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_staff_modify" tools:context="com.ylj.staff.StaffModifyActivity">

    <LinearLayout
        android:id="@+id/layout_info"
        android:background="@drawable/layout_white"
        android:layout_width="400dp"
        android:layout_centerInParent="true"
        android:layout_height="250dp"
        android:padding="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonTag"
                android:layout_height="wrap_content"
                android:text="@string/staff_name"/>
            <TextView
                android:id="@+id/tv_name"
                style="@style/CommonTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonTag"
                android:layout_height="wrap_content"
                android:text="@string/staff_company"/>
            <TextView
                android:id="@+id/tv_company"
                style="@style/CommonTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonTag"
                android:layout_height="wrap_content"
                android:text="@string/staff_group"/>
            <TextView
                android:id="@+id/tv_group"
                style="@style/CommonTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_edit"
        android:background="@drawable/layout_white"
        android:layout_width="400dp"
        android:layout_centerInParent="true"
        android:layout_height="250dp"
        android:padding="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout_name"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonTagWithEdit"
                android:layout_height="wrap_content"
                android:text="@string/staff_name"/>
            <EditText
                android:id="@+id/et_name"
                style="@style/CenterEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_company"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonTagWithEdit"
                android:layout_height="wrap_content"
                android:text="@string/staff_company"/>
            <EditText
                android:id="@+id/et_company"
                style="@style/CenterEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_group"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/CommonTagWithEdit"
                android:layout_height="wrap_content"
                android:text="@string/staff_group"/>
            <EditText
                android:id="@+id/et_group"
                style="@style/CenterEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
