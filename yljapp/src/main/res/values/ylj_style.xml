<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlueButton">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="BlueSmallButton">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="CenterLayout">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">@dimen/layout_height</item>
        <item name="android:background">@drawable/layout_white</item>
        <item name="android:paddingTop">@dimen/layout_padding_top</item>
        <item name="android:paddingBottom">@dimen/layout_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/layout_padding_left</item>
        <item name="android:paddingRight">@dimen/layout_padding_right</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LoginLayout" parent="CenterLayout">
        <item name="android:layout_marginTop">100dp</item>
    </style>

    <style name="CenterLayoutWithBar" parent="CenterLayout">
        <item name="android:layout_marginTop">50dp</item>
    </style>
    
    <style name="CommonEdit">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CenterEdit">
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonBigTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/common_title_blue</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="CommonTitle">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/common_title_blue</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="CommonSummary">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="CommonGrepTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/common_sub_text_grep</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="CommonTag">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="CommonTagWithEdit">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="EditButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/edit</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="DeleteButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/delete</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

